datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Developer {
  id         Int      @id @default(autoincrement())
  githubId   String   @unique
  username   String
  prs        PullRequest[]
  payouts    Payout[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Project {
  id           Int            @id @default(autoincrement())
  name         String
  description  String?
  repoUrl      String
  admin        Admin          @relation(fields: [adminId], references: [id])
  adminId      Int
  budget       Float          // Total budget allocated
  payouts      Payout[]
  pullRequests PullRequest[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([adminId])
}

model PullRequest {
  id            Int       @id @default(autoincrement())
  prNumber      Int
  title         String
  description   String?
  additions     Int
  deletions     Int
  hasTests      Boolean    @default(false)
  linkedIssue   String?    // optional: issue URL or number
  merged        Boolean    @default(false)
  score         Float
  amountPaid    Float      @default(0)
  developer     Developer  @relation(fields: [developerId], references: [id])
  developerId   Int
  project       Project    @relation(fields: [projectId], references: [id])
  projectId     Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([developerId])
  @@index([projectId])
  @@unique([projectId, prNumber])
}

model Payout {
  id           Int       @id @default(autoincrement())
  amount       Float
  paidAt       DateTime  @default(now())
  developer    Developer @relation(fields: [developerId], references: [id])
  developerId  Int
  project      Project   @relation(fields: [projectId], references: [id])
  projectId    Int

  @@index([developerId])
  @@index([projectId])
}
